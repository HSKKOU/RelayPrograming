$api_user = $this->url('api/default', array('controller' => 'user'));

$this->inlineScript()->appendScript(
<<<__END__

var \$loginDOM = \$("#login"),
    \$loginForm = \$("#login_form"),
    userId = -1;
(function main(){
  setLoginEvent();
})();



/* login */
function setLoginEvent(){
  \$loginForm.on("submit", function(_e){
    _e.preventDefault();
    login();
    return false;
  });
}

function login(){
  var name = \$loginForm.find('.input_name > input').val(),
      color = \$loginForm.find('.input_color > input').val();
  log("user inputs", name, color);

  var postData = { "name": name, "color": color };
  post({"url": "$api_user", "type": "post", "query": postData,
    "success": function(_data){
      log("data", _data);
      succeedLogin(_data['data']);
    },
    "fail": function(_data){
      log("data", _data);
      failedLogin();
    },
    "complete": function(_data){ /* nothing to do. */ }
  });
}

function succeedLogin(_user){
  \$loginForm.off();
  \$loginDOM.remove();

  /* set User Info */
  log("user", _user);
  userId = +_user['id'];
  /* end set User Info */

  setMainEvents();
}

function failedLogin(){
  alert("Failed to create or login.");
}
/* end login */



/* main routine */
function setMainEvents(){
  log("set Main Events", userId);
}
/* end main routine */

__END__
