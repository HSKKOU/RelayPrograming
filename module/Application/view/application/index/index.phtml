function postHeartBeat(){
  if(!canPostHB){ return; }
  canPostHB = false;
  log("post");
  setTimeout(function(){ canPostHB = true; }, 1400);
}

function heartBeat(){
  log("heart beat");
  setTimeout(function(){
    postHeartBeat();
    heartBeat();
  }, heartBeatSPB * 1000);
}
