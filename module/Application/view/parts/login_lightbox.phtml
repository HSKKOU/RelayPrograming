<div id="sign_up">
  <div class="wrapper">
    <div class="filter"></div>
    <div id="sign_up_lightbox" class="lightbox br">
      <div class="header">
        <div class="title">入室</div>
      </div>
      <form id="sign_up_form" class="body">
        <div class="title">name:</div>
        <div class="input_name">
          <input type="text" maxlength="8" name="name" class="br" />
        </div>
        <div class="input_color">
          <input type="color" value="#ffaaaa" name="color" list="color-list" />
          <datalist id="color-list">
            <option value="#ffaaaa"></option>
            <option value="#aaffaa"></option>
            <option value="#aaaaff"></option>
            <option value="#ffaaff"></option>
            <option value="#aaffff"></option>
            <option value="#ffffaa"></option>
            <option value="#afcafa"></option>
            <option value="#dcf1c4"></option>
            <option value="#99cc00"></option>
            <option value="#ffcc99"></option>
          </datalist>
        </div>
        <div class="join_button">
          <input id="join" class="button br" type="submit" value="JOIN" />
        </div>
      </div>
    </div>
  </div>
</div>
